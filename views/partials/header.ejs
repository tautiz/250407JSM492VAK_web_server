<header class="topbar">
    <div class="brand">
        <span class="brand-icon">✦</span>
        <span class="brand-name">NovaWave</span>
    </div>
    <nav class="top-nav">
        <!-- Pagrindinės nuorodos - visada matomos -->
        <a href="/" class="nav-link <%= activePage === 'home' ? 'is-active' : '' %>" data-variant="primary">Pagrindinis</a>
        <a href="/apie" class="nav-link <%= activePage === 'about' ? 'is-active' : '' %>" data-variant="primary">Apie</a>
        <a href="/blog" class="nav-link <%= activePage === 'blog' ? 'is-active' : '' %>" data-variant="primary">Blogas</a>
        
        <% if (userId) { %>
            <!-- Vartotojas prisijungęs - rodom atsijungimą ir vartotojo informaciją -->
            <span class="user-initials">
                <%= userInitials || 'U' %>
                <% if(typeof isAdmin !== 'undefined' && isAdmin) { %>
                    <span class="admin-badge">Admin</span>
                <% } %>
            </span>
            <a href="/logout" class="nav-link" data-variant="primary">Atsijungti</a>
        <% } else { %>
            <!-- Vartotojas neprisijungęs - rodom prisijungimą ir registraciją -->
            <a href="/login" class="nav-link <%= activePage === 'login' ? 'is-active' : '' %>" data-variant="primary">Prisijungti</a>
            <a href="/register" class="nav-link <%= activePage === 'register' ? 'is-active' : '' %>" data-variant="primary">Registracija</a>
        <% } %>
    </nav>
</header>
